<Window x:Class="Primera_interfaz.ClienteWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        Title="Agregar Empleado" Height="300" Width="400" ResizeMode="NoResize" Icon="Imagenes/cliente.png">
    <Grid>
        <StackPanel>
            <TextBlock Text="ID:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtId" IsReadOnly="True" Margin="10,0,10,10"/>

            <TextBlock Text="Nombre:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtNombre"  Margin="10,0,10,10"/>

            <TextBlock Text="Dirección:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtDireccion" Margin="10,0,10,10"/>

            <TextBlock Text="Ciudad:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtCiudad" Margin="10,0,10,10"/>

            <TextBlock Text="País:" Margin="10,0,10,0"/>
            <TextBox x:Name="txtPais" Margin="10,0,10,10"/>

            <Button Content="Agregar Empleado" Background="AliceBlue"  Click="Agregar_Click" FontWeight="Bold" FontStyle="Italic" Margin="10,0,10,10" />
            
        </StackPanel>
        
    </Grid>
</Window>
