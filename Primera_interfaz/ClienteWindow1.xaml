<Window x:Class="Primera_interfaz.ClienteWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        Title="Agregar Empleado" Height="300" Width="400" ResizeMode="NoResize" Icon="Imagenes/cliente.png">
    <Grid>
        <StackPanel>
            <TextBlock Text="ID:"/>
            <TextBox x:Name="txtId" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="txtNombre"  Margin="0,0,0,10"/>

            <TextBlock Text="Dirección:"/>
            <TextBox x:Name="txtDireccion" Margin="0,0,0,10"/>
            
            <TextBlock Text="Ciudad:"/>
            <TextBox x:Name="txtCiudad" Margin="0,0,0,10"/>

            <TextBlock Text="País:"/>
            <TextBox x:Name="txtPais" Margin="0,0,0,10"/>

            <Button Content="Agregar Cliente" Background="AliceBlue"  Click="Agregar_Click" FontWeight="Bold" FontStyle="Italic" />
            
        </StackPanel>
        
    </Grid>
</Window>
